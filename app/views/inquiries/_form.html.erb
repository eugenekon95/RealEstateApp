<div class="mt-2 mb-2">
  <%= form_for [listing, inquiry] do |form| %>
    <div>
      <%= form.label :name, class: 'form-control-label p-2' %><br>
      <% inquiry.errors.full_messages_for(:name).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div>
      <%= form.label :email, class: 'form-control-label p-2' %><br>
      <% inquiry.errors.full_messages_for(:email).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
      <%= form.text_field :email, value: current_user&.email, class: 'form-control' %>
    </div>

    <div>
      <%= form.label :message, class: 'form-control-label p-2' %><br>
      <% inquiry.errors.full_messages_for(:message).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
      <%= form.text_area :message, rows: 6, class: 'form-control' %>
    </div>

    <div class="mt-3">
      <%= form.submit 'Send', class: 'btn btn-danger' %>
    </div>
  <% end %>
</div>

